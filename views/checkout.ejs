<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css"
      rel="stylesheet"
    />
    <style>
      .relative:hover .group-hover\:block {
        display: block;
      }
    </style>
    <title><%= title %></title>
  </head>
  <body class="bg-gray-100">
    <%- include('partials/header') %>
    <div class="container mx-auto mt-10 p-6 bg-white rounded-lg shadow-md">
      <h1 class="text-3xl font-bold mb-4">Checkout</h1>
      <div class="mt-5">
        <h2 class="text-xl font-semibold">Your Cart:</h2>
        <ul class="list-disc ml-5 mb-4">
          <% cart.forEach(item => { %>
          <li class="mb-1">
            <%= item.name %> -
            <span class="font-semibold"><%= item.price %> Rs</span> x <%=
            item.quantity %>
          </li>
          <% }) %>
        </ul>
        <h2 class="font-semibold">
          Total:
          <span class="text-xl font-bold"
            ><%= cart.reduce((total, item) => total + item.price *
            item.quantity, 0) %> Rs</span
          >
        </h2>
      </div>
      <form action="/checkout/complete" method="POST" class="mt-5">
        <h2 class="text-xl font-semibold">Shipping Information:</h2>
        <div class="mb-4">
          <label for="name" class="block mb-1">Name:</label>
          <input
            type="text"
            name="name"
            id="name"
            required
            class="border rounded p-2 w-full focus:ring focus:ring-blue-300"
          />
        </div>

        <div class="mb-4">
          <label for="address" class="block mb-1">Address:</label>
          <input
            type="text"
            name="address"
            id="address"
            required
            class="border rounded p-2 w-full focus:ring focus:ring-blue-300"
          />
        </div>
        <button
          type="submit"
          class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600 transition duration-300"
        >
          Complete Checkout
        </button>
      </form>
    </div>
    <%- include('partials/footer') %>
  </body>
</html>
