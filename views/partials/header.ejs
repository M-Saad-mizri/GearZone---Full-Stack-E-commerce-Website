  <style>
    .dropdown {
      /* Adjust these styles as needed */
      width: 150px; /* Set desired width */
      list-style: none;
      padding: 0;
      margin: 0;
    }

    .dropdown li {
      padding: 5px 10px;
    }
    @keyframes marquee {
      0% {
        transform: translateX(100%);
      }
      100% {
        transform: translateX(-100%);
      }
    }

    .animate-marquee {
      display: inline-block;
      white-space: nowrap;
      animation: marquee 25s linear infinite; /* Slowed down to 25s */
    }

    /* Pause animation on hover */
    .animate-marquee:hover {
      animation-play-state: paused;
    }
  </style>

  <script>
    // Show the dropdown menu on hover
    const profileButton = document.querySelector(".profile");
    const dropdown = profileButton.querySelector(".dropdown");

    profileButton.addEventListener("mouseover", function () {
      dropdown.classList.remove("hidden");
    });

    profileButton.addEventListener("mouseleave", function () {
      dropdown.classList.add("hidden");
    });
  </script>
